#include <iostream>
#include<string>

int main()
{
	char str[20];
	int len = 0;
	std::cout << "Enter any string to remove vowels" << std::endl;
	std::cin >> str;
	len = strlen(str);
	for (int i = 0; i < len; ++i) {
		if (str[i] == 'a' || str[i] == 'e' || str[i] == 'i' || str[i] == 'o' || str[i] == 'u' ||
			str[i] == 'A' || str[i] == 'E' || str[i] == 'I' || str[i] == 'O' || str[i] == 'U') {
			for (int j = i; j < len; ++j) {
				str[j] = str[j + 1];
			}
			--len;
		}
	}
	std::cout << str;
}
