
#include <iostream>

int main()
{
    const int size = 10;
    int static arr[size];
    std::cout << "Enter 10 numbers please" << std::endl;
    for (int i = 0; i < size; ++i) {
        std::cin >> arr[i];
    }
    for (int i =size-1; i >=0;--i) {
       
       
        std::cout<<"The reversed number is"<<' '<< arr[i]<<std::endl;
    }
}
