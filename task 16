#include <iostream>

int main()
{
    const int size = 5;
    int static arr[size];
   
    std::cout << "Enter 5 numbers" << std::endl;
    for (int i = 0; i <size; ++i) {
        std::cin >> arr[i];

    }
    int tmp = arr[0];
    int count_indx = 0;
    for (int i = 0; i < size; ++i) {
        if (tmp < arr[i]) {
            tmp = arr[i];
            ++count_indx;
        }
    }
    std::cout << "The index of the greatist number is" << ' ' << "[" << count_indx << "]" << std::endl;

}
